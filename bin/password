#!/bin/bash

function list_sites {
  lpass ls --format="%an"
}

sites=$(list_sites)
if [ $? = 0 ] ; then
  selection=$(echo "$sites" | sed 's/ //g'| rofi -i -dmenu -p password -l 5)
else
  lpass login ratan.r.sur@gmail.com
  selection=$(list_sites | sed 's/ //g'| rofi -i -dmenu -p password -l 5)
fi

if [ $? = 0 ]; then
  xdotool type $(lpass show --password "$selection")
fi
