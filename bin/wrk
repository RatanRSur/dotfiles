#!/bin/bash

if [ ! -d ~/wrk/besu ]; then
    mkdir -p ~/wrk
    gh repo clone hyperledger/besu ~/wrk/besu
fi

tmux select-window -t besu || (tmux new-window -n besu -c ~/wrk/besu && tmux send-keys "git status" Enter)

function maybeLaunch {
  chronic pgrep $1 || nohup $1 >/dev/null 2>&1 &
}

maybeLaunch idea
maybeLaunch discord
maybeLaunch com.slack.Slack
maybeLaunch google-chrome-stable
